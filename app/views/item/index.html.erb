<h1>ベジタリアンフード検索</h1>

<div id="search_form_box">
  <form class="form-search" action="/item" method="get" role="search">
    <input class="input-medium search-query" name="q" placeholder="Search" type="text" value="<%= params[:q] %>">
    <input class="btn" alt="検索" value="検索" type="submit">
  </form>
</div>

<% @new_items.each do |item| %>


<%# if item['itemName'].include?(@search_word) %>
<ul>
	<li><%= "#{item['itemName']}, #{item.price} yen" %></li>
</ul>
   
<%# end %>

<% end %>